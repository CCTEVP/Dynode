{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "express"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "routes/**/*.ts",
    "views/**/*.ts",
    "types/**/*.d.ts",
    "app.ts",
    "server.ts",
    "config.ts"
  ]
}
