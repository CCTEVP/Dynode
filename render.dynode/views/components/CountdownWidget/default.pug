include ../BoxLayout/default

mixin countdown-widget(countdownElement)
  - var idValue = "countdown-widget-" + countdownElement._id;
  - var styleString = Object.entries(countdownElement.styles || {}).map(([k, v]) => `${k}: ${v}`).join('; ')
  - var targetTimeDate = countdownElement.targetDateTime.default || ""
  div(id=idValue, style=styleString, data-targetDateTime=targetTimeDate)
    if countdownElement.contents
      each child in countdownElement.contents
        if child.BoxLayout
          +box-layout(child.BoxLayout)