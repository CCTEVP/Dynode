{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "views/scripts" // Output in place
  },
  "include": [
    "views/pages/**/*.ts",
    "views/components/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
