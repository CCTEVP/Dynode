{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "views/scripts/components" // Output in place
  },
  "include": ["views/components/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
